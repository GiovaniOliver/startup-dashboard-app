# Application Configuration
# Copy this file to .env (for local), .env.development, or .env.production
# NEVER commit actual .env files to version control

# Application
REACT_APP_NAME=Startup Dashboard App
REACT_APP_VERSION=0.1.0

# API Configuration
# Development: http://localhost:3001
# Production: https://api.yourdomain.com
REACT_APP_API_BASE_URL=https://api.example.com
REACT_APP_API_TIMEOUT=30000

# NEAR Protocol Configuration
# Use 'testnet' for development, 'mainnet' for production
REACT_APP_NEAR_NETWORK=testnet
REACT_APP_NEAR_CONTRACT_NAME=your-contract.testnet

# Analytics (Optional)
# Get your tracking ID from Google Analytics
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX
REACT_APP_ENABLE_ANALYTICS=false

# Feature Flags
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_BETA_FEATURES=false

# Performance Monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_LOG_LEVEL=info

# Security
# Generate a strong random key for production
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REACT_APP_ENCRYPTION_KEY=GENERATE_STRONG_RANDOM_KEY_HERE

# Error Tracking (Optional)
# Sign up at sentry.io for error tracking
# REACT_APP_SENTRY_DSN=https://xxx@sentry.io/xxx
# REACT_APP_SENTRY_ENVIRONMENT=production

# Environment
NODE_ENV=production
GENERATE_SOURCEMAP=false

# Additional Configuration
# Add any other environment-specific variables here

# SECURITY NOTES:
# 1. Never commit actual .env files
# 2. Use different values for dev and prod
# 3. Rotate secrets regularly
# 4. Keep this file updated as a template
# 5. Store secrets in a secure vault (e.g., AWS Secrets Manager)
